#! /bin/sh

### BEGIN INIT INFO
# Provides:          melissadata
# Required-Start:    $all
# Required-Stop:     $all
# Default-Start:     2 3 4 5
# Default-Stop:      0 1 6
# Short-Description: Starts the MelissaData RPC server
# Description:       Starts the MelissaData RPC server
### END INIT INFO

PATH=/usr/local/sbin:/usr/local/bin:/sbin:/bin:/usr/sbin:/usr/bin
DAEMON=<%= node[:melissadata][:src_binary] %>
NAME=melissadata
DESC=melissadata

PID_FILE=<%= node[:melissadata][:pid_file] %>
CONFIG_FILE=<%= node[:melissadata][:conf_path] %>
 
DAEMON_OPTS="-c $CONFIG_FILE"

test -x $DAEMON || exit 0

# Include melissadata defaults if available
if [ -f /etc/default/melissadata ] ; then
  . /etc/default/melissadata
fi

set -e

case "$1" in
  start)
  echo -n "Starting $DESC: "
  start-stop-daemon --start --quiet --pidfile $PID_FILE \
    --exec $DAEMON -- $DAEMON_OPTS || true
  echo "Done."
  ;;
  stop)
  echo -n "Stopping $DESC: "
  start-stop-daemon --stop --quiet --pidfile $PID_FILE \
    --exec $DAEMON || true
  echo "Done."
  ;;
  restart|force-reload)
  echo -n "Restarting $DESC: "
  start-stop-daemon --stop --quiet --pidfile \
    $PID_FILE --exec $DAEMON || true
  sleep 1
  start-stop-daemon --start --quiet --pidfile \
    $PID_FILE --exec $DAEMON -- $DAEMON_OPTS || true
  echo "Done."
  ;;
  reload)
      echo -n "Reloading $DESC configuration: "
      start-stop-daemon --stop --signal HUP --quiet --pidfile $PID_FILE \
          --exec $DAEMON || true
      echo "Done."
      ;;
  *)
  N=/etc/init.d/$NAME
  echo "Usage: $N {start|stop|restart|reload|force-reload}" >&2
  exit 1
  ;;
esac

exit 0
