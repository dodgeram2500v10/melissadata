#! /bin/sh

### BEGIN INIT INFO
# Provides:          md_rpc_server
# Required-Start:    $all
# Required-Stop:     $all
# Default-Start:     2 3 4 5
# Default-Stop:      0 1 6
# Short-Description: Starts the MelissaData RPC server
# Description:       Starts the MelissaData RPC server
### END INIT INFO

NAME=md_rpc_server
SCRIPTNAME=/etc/init.d/$NAME
DAEMON=<%= node[:melissadata][:paths][:rpc_server_bin] %>
PID_FILE=<%= node[:melissadata][:paths][:pid_file] %>
CONFIG_FILE=<%= node[:melissadata][:paths][:config_file] %>
ARGS="-c $CONFIG_FILE"

# Define LSB log_* functions.
# Depend on lsb-base (>= 3.0-6) to ensure that this file is present.
. /lib/lsb/init-functions

# Function that starts the daemon/service
do_start() {
  start-stop-daemon --start --pidfile $PID_FILE --exec $DAEMON -- $ARGS || true
}

# Function that stops the daemon/service
do_stop() {
  start-stop-daemon --stop --pidfile $PIDFILE
}

case "$1" in
  start)
        [ "$VERBOSE" != no ] && log_daemon_msg "Starting $NAME"
        do_start
        case "$?" in
                0|1) [ "$VERBOSE" != no ] && log_end_msg 0 ;;
                2) [ "$VERBOSE" != no ] && log_end_msg 1 ;;
        esac
        ;;
  stop)
        [ "$VERBOSE" != no ] && log_daemon_msg "Stopping $NAME"
        do_stop
        case "$?" in
                0|1) [ "$VERBOSE" != no ] && log_end_msg 0 ;;
                2) [ "$VERBOSE" != no ] && log_end_msg 1 ;;
        esac
        ;;

  restart)
        do_stop
        case "$?" in
          0|1)
                do_start
                case "$?" in
                        0) log_end_msg 0 ;;
                        1) log_end_msg 1 ;; # Old process is still running
                        *) log_end_msg 1 ;; # Failed to start
                esac
                ;;

          *)
                # Failed to stop
                log_end_msg 1
                ;;
        esac
        ;;

  *)
        log_action_msg "Usage: $SCRIPTNAME {start|stop|restart}" >&2
        exit 3
        ;;
esac

exit 0
