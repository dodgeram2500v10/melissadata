#!/usr/bin/env ruby
require File.expand_path('../lib/melissadata/melissadata', File.dirname(__FILE__))

handler = MelissaData::RPC::Server.new

host = MelissaData::DEFAULT_ADDRESS
port = MelissaData::DEFAULT_PORT

svr = MessagePack::RPC::Server.new
svr.listen(host, port, handler)
puts "== RPC listening on #{host}:#{port}"
svr.run


